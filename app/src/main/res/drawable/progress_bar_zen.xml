<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Nền của thanh loading (màu xám nhạt hoặc xanh cực nhạt) -->
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="20dp" />
            <solid android:color="#E0EADD" /> <!-- Màu nền thanh loading -->
        </shape>
    </item>

    <!-- Phần đang loading (màu xanh Matcha) -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="20dp" />
                <solid android:color="#4CAF50" /> <!-- Màu xanh Matcha -->
            </shape>
        </clip>
    </item>
</layer-list>