<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="6dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="1dp"
    app:cardBackgroundColor="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Icon bài học: Kiểu con dấu vuông bo tròn (Hanko style) -->
        <FrameLayout
            android:id="@+id/iconContainer"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:background="@drawable/bg_lesson_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/txtIconText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="学"
                android:textColor="@color/jp_mint_dark"
                android:textStyle="bold"
                android:textSize="22sp" />
        </FrameLayout>

        <!-- Thông tin bài học -->
        <TextView
            android:id="@+id/txtLessonTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Bài 01: Chào hỏi"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="@color/jp_text_main"
            app:layout_constraintTop_toTopOf="@id/iconContainer"
            app:layout_constraintStart_toEndOf="@id/iconContainer"
            app:layout_constraintEnd_toStartOf="@id/btnReview"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintBottom_toTopOf="@id/txtTotalCards"/>

        <TextView
            android:id="@+id/txtTotalCards"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25 Từ vựng  •  10 Ngữ pháp"
            android:textSize="12sp"
            android:textColor="@color/jp_text_sub"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/txtLessonTitle"
            app:layout_constraintStart_toStartOf="@id/txtLessonTitle"
            app:layout_constraintBottom_toBottomOf="@id/iconContainer"/>

        <!-- Nút hành động: Sử dụng icon tinh tế hơn -->
        <ImageButton
            android:id="@+id/btnReview"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_button_circle_secondary"
            android:src="@drawable/ic_refresh_zen"
            app:tint="@color/jp_mint_dark"
            app:layout_constraintEnd_toStartOf="@id/btnStart"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageButton
            android:id="@+id/btnStart"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_play_zen"
             app:tint="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>