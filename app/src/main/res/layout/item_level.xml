<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Vòng tròn hiển thị Level -->
        <View
            android:id="@+id/levelCircle"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/circle_shape"
            android:backgroundTint="@color/primary_light"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/txtLevelName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="N5"
            android:textColor="@color/primary_color"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/levelCircle"
            app:layout_constraintEnd_toEndOf="@id/levelCircle"
            app:layout_constraintStart_toStartOf="@id/levelCircle"
            app:layout_constraintTop_toTopOf="@id/levelCircle" />

        <!-- Thông tin mô tả -->
        <TextView
            android:id="@+id/txtLevelFullTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cấp độ Sơ cấp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_main"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@id/levelCircle"
            app:layout_constraintStart_toEndOf="@id/levelCircle"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintBottom_toTopOf="@id/txtLevelDesc"/>

        <TextView
            android:id="@+id/txtLevelDesc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Dành cho người mới bắt đầu học"
            android:textSize="13sp"
            android:textColor="@color/text_sub"
            app:layout_constraintStart_toStartOf="@id/txtLevelFullTitle"
            app:layout_constraintTop_toBottomOf="@id/txtLevelFullTitle"
            app:layout_constraintBottom_toBottomOf="@id/levelCircle"
            app:layout_constraintEnd_toStartOf="@id/imgArrow"/>

        <ImageView
            android:id="@+id/imgArrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_media_play"
            app:tint="@color/primary_light"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>