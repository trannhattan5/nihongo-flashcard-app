<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/jp_bg_zen">

    <!-- Chữ Nhật trang trí in chìm: "Học tập" (学習) -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="学習"
        android:textColor="#0D000000"
        android:textSize="120sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="-20dp"
        android:layout_marginStart="-20dp" />

    <!-- Nút Đóng kiểu Zen -->
    <ImageButton
        android:id="@+id/btnClose"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="12dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        app:tint="@color/jp_text_sub"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Header: Thanh tiến trình & Counter -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="24dp"
        app:layout_constraintTop_toBottomOf="@id/btnClose">

        <ProgressBar
            android:id="@+id/progressStudy"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="8dp"
            android:progress="40"
            android:progressDrawable="@drawable/custom_progress_bar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/txtProgressCounter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:id="@+id/txtProgressCounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10/25"
            android:textColor="@color/jp_green_dark"
            android:textStyle="bold"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Thống kê trạng thái nhanh -->
    <LinearLayout
        android:id="@+id/layoutProgressSummary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_hanko_light"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutHeader">

        <TextView
            android:id="@+id/txtRememberedCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="● 0"
            android:textColor="@color/jp_green_dark"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtNotRememberedCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:text="● 0"
            android:textColor="#E57373"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtRemainingCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="○ 15"
            android:textColor="@color/jp_text_sub"
            android:textSize="13sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Thẻ Flashcard chính (Washi Paper Style) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardFlash"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="40dp"
        app:cardCornerRadius="28dp"
        app:cardElevation="4dp"
        app:strokeWidth="1dp"
        app:strokeColor="#F0F0F0"
        app:layout_constraintBottom_toTopOf="@id/layoutButtons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutProgressSummary">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <!-- Mặt trước (Front Side) -->
            <LinearLayout
                android:id="@+id/layoutFront"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="32dp">

                <TextView
                    android:id="@+id/txtWord"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="学習"
                    android:textColor="@color/jp_text_main"
                    android:textSize="56sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="40dp"
                    android:layout_height="3dp"
                    android:layout_marginVertical="24dp"
                    android:background="@color/jp_green_light" />

                <TextView
                    android:id="@+id/txtReading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="がくしゅう"
                    android:textColor="@color/jp_green_sage"
                    android:textSize="22sp"
                    android:letterSpacing="0.1" />
            </LinearLayout>

            <!-- Mặt sau (Back Side) -->
            <LinearLayout
                android:id="@+id/layoutBack"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="32dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/txtMeaning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Học tập, nghiên cứu"
                    android:textColor="@color/jp_green_dark"
                    android:textSize="26sp"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>

        </FrameLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Hệ thống nút bấm kiểu Zen -->
    <LinearLayout
        android:id="@+id/layoutButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="24dp"
        android:paddingBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNotRemembered"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:text="Chưa nhớ"
            android:textAllCaps="false"
            android:textColor="#E57373"
            app:backgroundTint="#FFF1F0"
            app:cornerRadius="20dp"
            app:strokeWidth="1dp"
            app:strokeColor="#FFCDD2"
            android:textStyle="bold" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRemembered"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:text="Đã nhớ"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:backgroundTint="@color/jp_green_dark"
            app:cornerRadius="20dp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>