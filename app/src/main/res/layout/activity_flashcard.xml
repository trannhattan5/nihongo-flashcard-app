<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_light">

    <!-- Thanh tiến trình học tập -->
    <ProgressBar
        android:id="@+id/progressStudy"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="8dp"
        android:layout_margin="24dp"
        android:progress="40"
        android:progressDrawable="@drawable/custom_progress_bar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/txtProgressCounter" />

    <TextView
        android:id="@+id/txtProgressCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10/25"
        android:layout_marginEnd="24dp"
        android:textColor="@color/text_sub"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/progressStudy"
        app:layout_constraintBottom_toBottomOf="@id/progressStudy"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Thẻ Flashcard chính -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardFlash"
        android:layout_width="0dp"
        android:layout_height="350dp"
        android:layout_marginHorizontal="32dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="12dp"
        app:layout_constraintTop_toBottomOf="@id/progressStudy"
        app:layout_constraintBottom_toTopOf="@id/layoutButtons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.4">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="24dp">

            <!-- ===== FRONT SIDE ===== -->
            <LinearLayout
                android:id="@+id/layoutFront"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtWord"
                    android:textSize="48sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_color"/>

                <View
                    android:layout_width="60dp"
                    android:layout_height="2dp"
                    android:layout_marginVertical="16dp"
                    android:background="@color/primary_light"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtReading"
                    android:textSize="22sp"
                    android:textColor="@color/text_sub"/>
            </LinearLayout>

            <!-- ===== BACK SIDE ===== -->
            <LinearLayout
                android:id="@+id/layoutBack"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtMeaning"
                    android:textSize="22sp"
                    android:textStyle="italic"
                    android:textColor="@color/text_main"
                    android:gravity="center"/>
            </LinearLayout>

        </FrameLayout>
    </androidx.cardview.widget.CardView>

    <!-- Khu vực nút bấm -->
    <LinearLayout
        android:id="@+id/layoutButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="24dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnNotRemembered"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginEnd="12dp"
            android:text="Chưa nhớ"
            android:textAllCaps="false"
            android:textColor="@color/error_red"
            android:textStyle="bold"
            android:background="@drawable/btn_outline_red"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnRemembered"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:text="Đã nhớ"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/btn_solid_green"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>