<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_light">

    <ImageButton
        android:id="@+id/btnClose"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:background="@android:color/transparent"
        android:contentDescription="Đóng"
        android:src="@drawable/ic_close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Thanh tiến trình học tập -->
    <ProgressBar
        android:id="@+id/progressStudy"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="8dp"
        android:layout_margin="24dp"
        android:progress="40"
        android:progressDrawable="@drawable/custom_progress_bar"
        app:layout_constraintTop_toBottomOf="@id/btnClose"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/txtProgressCounter" />
    <!-- Progress Summary -->
    <LinearLayout
        android:id="@+id/layoutProgressSummary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/progressStudy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Remembered -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtRememberedCount"
            android:text="✔ 0"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/success_green"
            android:layout_marginEnd="16dp"/>

        <!-- Not remembered -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtNotRememberedCount"
            android:text="✖ 0"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/error_red"
            android:layout_marginEnd="16dp"/>

        <!-- Remaining -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtRemainingCount"
            android:text="⏳ 35"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/text_sub"/>
    </LinearLayout>


    <TextView
        android:id="@+id/txtProgressCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:text="10/25"
        android:textColor="@color/text_sub"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/progressStudy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/progressStudy" />

    <!-- Thẻ Flashcard chính -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardFlash"
        android:layout_width="0dp"
        android:layout_height="350dp"
        android:layout_marginHorizontal="32dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="12dp"
        app:layout_constraintBottom_toTopOf="@id/layoutButtons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/progressStudy"
        app:layout_constraintVertical_bias="0.4">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="24dp">

            <!-- ===== FRONT SIDE ===== -->
            <LinearLayout
                android:id="@+id/layoutFront"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtWord"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary_color"
                    android:textSize="48sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="60dp"
                    android:layout_height="2dp"
                    android:layout_marginVertical="16dp"
                    android:background="@color/primary_light" />

                <TextView
                    android:id="@+id/txtReading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_sub"
                    android:textSize="22sp" />
            </LinearLayout>

            <!-- ===== BACK SIDE ===== -->
            <LinearLayout
                android:id="@+id/layoutBack"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/txtMeaning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/text_main"
                    android:textSize="22sp"
                    android:textStyle="italic" />
            </LinearLayout>

        </FrameLayout>
    </androidx.cardview.widget.CardView>

    <!-- Khu vực nút bấm -->
    <LinearLayout
        android:id="@+id/layoutButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="24dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnNotRemembered"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginEnd="12dp"
            android:layout_weight="1"
            android:background="@drawable/btn_outline_red"
            android:text="Chưa nhớ"
            android:textAllCaps="false"
            android:textColor="@color/error_red"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnRemembered"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:background="@drawable/btn_solid_green"
            android:text="Đã nhớ"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>